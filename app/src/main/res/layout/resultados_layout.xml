<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultadosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtResultadosJugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="Jugador"/>

        <Button
            android:id="@+id/btResultadosJugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Filtrar\nJugador"></Button>

        <Button
            android:id="@+id/btResultadosAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ver\nTodos"></Button>
        <ImageButton
            android:id="@+id/btBorrarResultados"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Borrar\nResultados"
            app:srcCompat="@android:drawable/ic_menu_delete" ></ImageButton>

    </LinearLayout>

    <ListView
        android:id="@+id/lvResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""></ListView>
</LinearLayout>